<%= bootstrap_form_tag '/messages', :class => 'form-horizontal' do %>
    <div class="control-group">
      <label class="control-label" for="inputRecipients">Recipients</label>
      <div class="controls">
        <%= text_field_tag 'recipients' %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputSubject">Subject</label>
      <div class="controls">
        <%= text_field_tag 'subject' %>
       </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputBody">Body</label>
      <div class="controls">
        <%= text_area_tag 'body' %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= submit_tag 'Send', :class => 'btn btn-primary' %>
      </div>
    </div>

<% end %>