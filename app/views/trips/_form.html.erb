<%= bootstrap_nested_form_for @trip, :html => { :class => 'form-horizontal' } do |f| %>

      <%= f.text_field :name, :class => 'text_field' %>

      <div class='control-group'>
        <%= f.label :trip_type, :class => 'control-label' %>
        <div class='controls'>
            <%= f.enum_select :trip_type %>
        </div>
      </div>

      <%= f.text_field :start_datetime, :class => 'datetime' %>

      <%= f.text_field :transportation, :class => 'text_field' %>

    <%= f.fields_for :origin do |origin_form| %>
        <%= origin_form.text_field :address, :label => 'Origin', :class => 'text_field address_field origin_field'  %>
    <% end %>

    <%= f.fields_for :destination do |destination_form| %>
        <%= destination_form.text_field :address, :label => 'Destination', :class => 'text_field address_field destination_field' %>
    <% end %>

    <%= f.actions %>

<% end %>
