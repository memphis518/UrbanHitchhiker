<h2>Sign in</h2>

<% if @user.errors.any? %>
    <div id="errors" class="alert alert-error fade in">
      <button class="close" data-dismiss="alert" type="button">Ã—</button>
      <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </div>
<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="control-group">
      <div class="controls">
        <%= f.email_field :email, :class => 'text_field', :autofocus => true, :placeholder => 'Email Address' %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.password_field :password, :class => 'text_field', :placeholder => 'Password'%>
      </div>
    </div>


  <div><%= f.submit "Sign in",  :class => 'btn btn-primary'  %></div>
<% end %>

<%= render "devise/shared/links" %>
